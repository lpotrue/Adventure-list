extends layout

block content
  link(rel='stylesheet', href='/stylesheets/cards2.css')
  link(rel='stylesheet', href='/stylesheets/button.css')
  .container
    .intro #{intro}
     
    if (!user)
      a(href="/login") Login
      br
      a(href="/register") Register
    if (!horses)
     h3 #{owner.username} hasn't added any horses
    if (user)    
   .col-12
   .cards
    each horse in horses
     .card
      .card-image
       img(src="#{horse.url[0]}", class="card-image")
      .card-title
       #{horse.horsename}
        h2
         | #{horse.horsename}
     
        .card-content
           p
             h4 Born:
             
               span #{horse.age}
             
             h4 Breed:
             
               span #{horse.breed}      
         a.btnss(href="/horse/"+horse._id)  #{horse.horsename}'s Profile
    
             
                    