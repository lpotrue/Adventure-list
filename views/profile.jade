extends layout

block content
  .container
    h3 profile
    if (!user)
      a(href="/login") Login
      br
      a(href="/register") Register
    if (user)
      p You are currently logged in as #{user.username}
      p #{lindsay}
      each horse in horses
          li 
            a(href="/horse/"+horse._id) #{horse.horsename} 

      
      form(role='form', action="/add-horse", method="post", style='max-width: 300px;')
       .form-group
           input.form-control(type='text', name="horsename", placeholder='Enter Horsename')
       button.btn.btn-default(type='submit') Submit
       &nbsp;
       a(href='/')
         button.btn.btn-primary(type="button") Cancel

