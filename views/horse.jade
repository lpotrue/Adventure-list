extends layout

block content
  link(rel='stylesheet', href='/stylesheets/horse.css')
  
  #background-all
   
   
    .horse-info
      each url in horse.url
          img(src="#{url}", class="img-circle", id="img-circle")
          .info
           h6 #{horse.horsename} is a #{horse.breed},  born in #{horse.age}. Owned by #{horse.ownername}, and being trained for #{horse.discipline}.
            
            
           
           
      
    
    h3 #{horse.horsename}'s Entries
       button(class="toggle" id='toggle-switch') Show
     
    each entry in entries
        li
         
         h6 #{entry.date} 
         
          
         
         .log
            
           h4 Written by: #{entry.writtenBy}
              .entry #{entry.entry}

                
            a.btn(href="/entry/"+entry._id) Delete
           


    .container 
     .entry-area
      h3 Write a Review about #{horse.horsename}'s Session

         form(role='form', action="", method="post", style='max-width: 300px;')
          .form-group
             textarea.form-control(type='text', name="entry", placeholder='Write an entry about #{horse.horsename} here')
             
      
            button.bt(type='submit') Submit
            &nbsp;
            a(href='/')
              button.bt(type="confirm" id="confirm") Cancel

           
        
         