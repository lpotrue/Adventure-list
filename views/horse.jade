extends layout

block content
  .container
   h1 #{horse.horsename}
   each entry in entries
         li 
           a(href="/entry/"+entry._id) #{entry.entry} 
   form(role='form', action="", method="post", style='max-width: 300px;')
       .form-group
           input.form-control(type='text', name="entry", placeholder='Make Entry')
       button.btn.btn-default(type='submit') Submit
       &nbsp;
       a(href='/')
         button.btn.btn-primary(type="button") Cancel
