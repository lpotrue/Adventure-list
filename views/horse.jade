extends layout

block content
  .container
   h1 #{horse.horsename}
   h4 #{horse.images}
   each image in horse.images
    img(src="/uploads/#{image}", class="horse-pics")
   each entry in entries
         li 
           a(href="/entry/"+entry._id) #{entry.entry} #{entry.date}
   form(role='form', action="", method="post", style='max-width: 300px;')
       .form-group
           input.form-control-horse(type='text', name="entry", placeholder='Make Entry')
       button.btn.btn-default(type='submit') Submit
      
       a(href='/')
         button.btn.btn-primary(type="button") Cancel
