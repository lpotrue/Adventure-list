extends layout

block content
  .container
   h5 #{horse.horsename}
   each image in horse.images
    img(src="/uploads/#{image}", class="horse-pics", id="background")
   form(role='form', action="", method="post", style='max-width: 300px;')
       .form-group
           textarea.form-control-horse(type='text', name="entry", placeholder='Make an Entry about #{horse.horsename}')
          h6 Rate your session
          .cont
              .stars
                form(action='')
                  input#star-5-2.star.star-5(type='radio', name='star')
                  label.star.star-5(for='star-5-2')
                  input#star-4-2.star.star-4(type='radio', name='star')
                  label.star.star-4(for='star-4-2')
                  input#star-3-2.star.star-3(type='radio', name='star')
                  label.star.star-3(for='star-3-2')
                  input#star-2-2.star.star-2(type='radio', name='star')
                  label.star.star-2(for='star-2-2')
                  input#star-1-2.star.star-1(type='radio', name='star')
                  label.star.star-1(for='star-1-2')

       button.btn.btn-default(type='submit') Submit
      
       a(href='/horse')
         button.btn.btn-primary(type="button") Cancel
       h4 #{horse.horsename}'s Entries
    if (!entries)
     h6 #{horse.horsename} doesn't have any entries yet...
   each entry in entries
         li 
           a(href="/entry/"+entry._id) #{entry.entry} #{entry.date}
